<!--components/my-tab-control/my-tab-control.wxml-->
<view class="tab-control titleclass">
  <block wx:for="{{titles}}" wx:key="index">
    <view class="tab-item {{currentIndex == index ? 'active': ''}} " bindtap="handleItemClick" data-index="{{index}}" data-title="{{item}}">
      <text>{{item}}</text>
    </view>
  </block>
</view>